<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    tools:context="com.planboxone.activity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="20dp"
        android:background="@drawable/panel_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/writer_title_rv"
            style="@style/panel_middle">

            <TextView
                style="@style/label_text"
                android:text="标题" />

            <EditText
                android:id="@+id/writer_title_edit"
                style="@style/label_text_two"
                android:layout_width="fill_parent"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="点击此处输入标题"
                android:singleLine="true" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@drawable/line_repeat" />

        <RelativeLayout
            android:id="@+id/writer_date_rv"
            style="@style/panel_middle">

            <TextView
                style="@style/label_text"
                android:text="日期" />

            <TextView
                android:id="@+id/writer_date_text"
                style="@style/label_text_two"
                android:hint="日期" />

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/go_detail" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@drawable/line_repeat" />

        <RelativeLayout
            android:id="@+id/writer_time_rv"
            style="@style/panel_middle">

            <TextView
                style="@style/label_text"
                android:text="时间" />

            <TextView
                android:id="@+id/writer_time_text"
                style="@style/label_text_two"
                android:hint="时间" />

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/go_detail" />
        </RelativeLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@drawable/line_repeat" />

        <RelativeLayout
            android:id="@+id/writer_category_rv"
            style="@style/panel_middle">

            <TextView
                style="@style/label_text"
                android:text="类型" />

            <TextView
                android:id="@+id/writer_category_text"
                style="@style/label_text_two"
                android:hint="类型" />

            <ImageView
                style="@style/label_image_one"
                android:src="@drawable/go_detail"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@drawable/line_repeat" />

        <RelativeLayout
            android:id="@+id/writer_top_rv"
            style="@style/panel_middle">

            <TextView
                style="@style/label_text"
                android:text="置顶" />

            <CheckBox
                android:id="@+id/writer_top_chk"
                style="@style/panel_item_check_box"
                android:layout_marginRight="10dp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@drawable/line_repeat" />

        <RelativeLayout
            android:id="@+id/writer_note_rv"
            style="@style/panel_middle">

            <TextView
                style="@style/label_text"
                android:text="备注" />

            <EditText
                android:id="@+id/writer_note_edit"
                style="@style/label_text_two"
                android:layout_width="fill_parent"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="备注" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
