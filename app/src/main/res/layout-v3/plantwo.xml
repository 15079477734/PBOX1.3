<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_event_background"
    android:orientation="vertical"
    android:background="@drawable/listitem_white"
    android:paddingLeft="15dp"
    android:layout_marginTop="15dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
 >

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/percent_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4.0dip"
            android:src="@drawable/flag_percent"
            />

        <TextView
            android:id="@+id/tv_event_progress"
            android:textSize="14.0sp"
            android:ellipsize="start"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="阅读进度"
            android:singleLine="true"
            android:layout_weight="1.0" />
        <TextView
            android:textSize="14.0sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6.0dip"
            android:text="目标时:" />

        <TextView
            android:id="@+id/tv_event_due"
            android:textSize="14.0sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4.0dip"/>
    </LinearLayout>


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/gray" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.0dip">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/lv_event_head"
                android:layout_width="70dp"
                android:layout_height="88dp"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4.0dip"
                android:layout_alignTop="@id/lv_event_head"
                android:layout_alignRight="@id/lv_event_head" />

            <ImageView
                android:id="@+id/newnotify_iv"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/check_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="4.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10.0dip">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_event_title"
                    android:textSize="18.0sp"
                    android:ellipsize="end"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:text="书名"
                    android:singleLine="true"
                    android:layout_weight="1.0" />

                <TextView
                    android:textSize="12.0sp"
                    android:textColor="#ffffffff"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/tv_event_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="最近阅读内容..."
                    android:textSize="14.0sp"
                    android:maxLines="2" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
